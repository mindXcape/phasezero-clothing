{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "apis/*": ["src/apis/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "data/*": ["src/data/*"],
      "hooks/*": ["src/hooks/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "provider/*": ["src/provider/*"],
      "routes/*": ["src/routes/*"],
      "scss/*": ["src/scss/*"],
      "utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "vite.config.ts",
    ".eslintrc.cjs",
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
